            <canvas id="acquisitions"></canvas>
          </div>
        </div>
      </div>
      <div class="col-xl-6">
        <div class="card mb-4">
          <div class="card-header">
            <i class="fas fa-chart-bar me-1"></i>
            category Wise Revenue Chart
          </div>
          <div class="card-body">
            <canvas id="categoryWiseRevenueChart"></canvas>
          </div>
        </div>
      </div>
    </div>
