<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Login - User</title>
    <link href="/login/css/styles.css" rel="stylesheet" />
    <script
      src="https://use.fontawesome.com/releases/v6.3.0/js/all.js"
      crossorigin="anonymous"
    ></script>
    <script src="/login/js/firebase.js" type="module" defer></script>
  </head>
  <body class="">
    <div id="layoutAuthentication">
      <div id="layoutAuthentication_content">
        <main>
          <div class="container">
            <div class="row justify-content-center">
              <div class="col-lg-5">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                  <div class="card-header">
                    <h3 class="text-center font-weight-light my-4">
                      User Login
                    </h3>
                  </div>
                  <div class="card-body">
                    <form
                      name="loginfrm"
                      id="loginfrm"
                      method="post"
                      action="/login"
                    >
                      <p class="text-danger">
                        <% if(locals.errors){%> <%=errors %> <%}%>
                      </p>
                      <div class="form-floating mb-3">
                        <input
                          class="form-control"
                          id="inputEmail"
                          type="email"
                          placeholder="name@example.com"
                          name="email"
                          value="<% if(locals.evalue){%> <%=evalue %> <%}%>"
                        />

                        <label for="inputEmail">Email address</label>
                        <span class="text-danger"
                          ><% if(locals.email){%> <%=email %> <%}%></span
                        >
                      </div>
                      <div class="">
                        <div class=" form-floating input-group" id="show_hide_password">
                            <input
                              class="form-control"
                              id="inputPassword"
                              type="password"
                              placeholder="Password"
                              name="password"
                              
                            />
                            <!-- <span class="input-group-text">@</span> -->
                           
                            <label for="inputPassword">Password</label>
                            <span class="input-group-text"><a href="" 
                              ><i
                                class="fa fa-eye-slash"
                                aria-hidden="true"
                              ></i
                            ></a></span>
                            <!-- <label for="inputPassword">Password</label> -->
                            <!-- <span class="text-danger"
                              ><%# if(locals.password){%> <%#password %>
                              <%#}%></span
                            > -->
                         
                              
                            </div>
                          </div>
                        </div>
                      
                      <!-- <div class="form-check mb-3">
                        <input
                          class="form-check-input"
                          id="inputRememberPassword"
                          type="checkbox"
                          value=""
                        />
                        <label
                          class="form-check-label"
                          for="inputRememberPassword"
                          >Remember Password</label
                        >
                      </div> -->
                      <div
                        class="d-flex align-items-center justify-content-center mb-3"
                      >
                        <!-- <a class="small" href="password.html"
                          >Forgot Password?</a
                        > -->
                        <button
                          type="submit"
                          class="btn btn-primary"
                          id="btn-signin"
                          name="login"
                        >
                          Sign in
                        </button>
                        <a href="/" class="btn btn-danger mx-3">Cancel</a>
                      </div>
                    </form>
                  
                  <div class="card-footer text-center py-3">
                    <button
                      type="button"
                      class="btn btn-primary"
                      id="btnGoogleSignin"
                      name="loginGoogle"
                    >
                      Login with google account
                    </button>
                    <div class="small">
                      <a href="/register">Need an account? Sign up!</a>
                    </div>
                    <div class="small">
                      <a href="/profile/fogotPassword">Forgot Password ?</a>
                    </div>
                  </div>
                </div>
                </div>
                </div>
              </div>
            </div>
          </div>
        </main>
      </div>
      <div id="layoutAuthentication_footer">
        <footer class="py-4 bg-light mt-auto">
          <div class="container-fluid px-4">
            <div
              class="d-flex align-items-center justify-content-between small"
            >
              <div class="text-muted">Copyright &copy; Your Website 2023</div>
              <div>
                <a href="#">Privacy Policy</a>
                &middot;
                <a href="#">Terms &amp; Conditions</a>
              </div>
            </div>
          </div>
        </footer>
      </div>
    </div>

    <script src="/login/js/jquery.min.js"></script>
    <script src="/login/js/bootstrap.min.js"></script>

    <!-- <script src="/login/js/scripts.js"></script> -->
     <script>
      $(document).ready(function() {
    $("#show_hide_password a").on('click', function(event) {
        event.preventDefault();
        if($('#show_hide_password input').attr("type") == "text"){
            $('#show_hide_password input').attr('type', 'password');
            $('#show_hide_password i').addClass( "fa-eye-slash" );
            $('#show_hide_password i').removeClass( "fa-eye" );
        }else if($('#show_hide_password input').attr("type") == "password"){
            $('#show_hide_password input').attr('type', 'text');
            $('#show_hide_password i').removeClass( "fa-eye-slash" );
            $('#show_hide_password i').addClass( "fa-eye" );
        }
    });
});
     </script>
  </body>
</html>
