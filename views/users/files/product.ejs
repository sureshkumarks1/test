<div class="container">
  <div class="row">
    <% if (proddata) { %>
    <nav aria-label="breadcrum">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="/products">Products</a></li>
        <li class="breadcrumb-item">
          <a href="/products/"><%= proddata.category.name%></a>
        </li>
        <li class="breadcrumb-item"><%= proddata.name%></li>
      </ol>
    </nav>

    <div class="col-6">
      <!-- card left -->
      <div class="product-imgs">
        <div class="img-display">
          <div class="img-showcase">
            <img
              class="xzoom"
              src="<%= proddata.image %>"
              xoriginal="<%= proddata.image %>"
            />

            <img src="/user/images/shoes_images/shoe_2.jpg" alt="shoe image" />
            <img src="/user/images/shoes_images/shoe_3.jpg" alt="shoe image" />
            <img src="/user/images/shoes_images/shoe_4.jpg" alt="shoe image" />
          </div>
        </div>
        <div class="img-select">
          <div class="img-item">
            <a href="/user/images/shoes_images/shoe_1.jpg" data-id="1">
              <img
                src="/user/images/shoes_images/shoe_1.jpg"
                alt="shoe image"
                class="xzoom-gallery"
                xpreview="/user/images/shoes_images/shoe_1.jpg"
              />
            </a>
          </div>
          <div class="img-item">
            <a href="/user/images/shoes_images/shoe_2.jpg" data-id="2">
              <img
                src="/user/images/shoes_images/shoe_2.jpg"
                alt="shoe image"
                class="xzoom-gallery"
              />
            </a>
          </div>
          <div class="img-item">
            <a href="/user/images/shoes_images/shoe_3.jpg" data-id="3">
              <img
                src="/user/images/shoes_images/shoe_3.jpg"
                alt="shoe image"
                class="xzoom-gallery"
              />
            </a>
          </div>
          <div class="img-item">
            <a href="/user/images/shoes_images/shoe_4.jpg" data-id="4">
              <img
                src="/user/images/shoes_images/shoe_4.jpg"
                alt="shoe image"
                class="xzoom-gallery"
              />
            </a>
          </div>
        </div>
      </div>
    </div>

    <div class="col-6">
      <!-- card right -->
      <div class="product-content">
        <h2 class="product-title"><%= proddata.name%></h2>
        
        <div class="product-rating">
          <i class="fa fa-star"></i>
          <i class="fa fa-star"></i>
          <i class="fa fa-star"></i>
          <i class="fa fa-star"></i>
          <i class="fa fa-star-half-alt"></i>
          <span>4.7(21)</span>
        </div>

        <div class="product-price">
          <p class="last-price">Old Price: <span>$50.00</span></p>
          <p class="new-price">
            New Price: $ <span><%= proddata.price%> </span>
          </p>
        </div>

        <div class="product-detail">
          <h2>about this item:</h2>
          <p><%= proddata.description %></p>
        </div>

        <div class="purchase-info">
          <input type="number" min="0" value="1" />
          <button type="button" class="btn">
            Add to Cart <i class="fas fa-shopping-cart"></i>
          </button>
          <button type="button" class="btn">Compare</button>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>
